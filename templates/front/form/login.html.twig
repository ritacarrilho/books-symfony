{% extends "base.html.twig" %}

{% block title %} Login {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card w-50 m-auto">
            <div class="card-header">Login</div>
            <div class="card-body">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey }}
                </div>
            {% endif %}
                <form action="{{ path('app_login') }}" class="form" method="post">
                    <div class="group-form mt-2">
                        <label for="username" class="form-label">Username :</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ lastIdent }}">
                    </div>
                    <div class="group-form mt-2">
                        <label for="password" class="form-label">Password :</label>
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>
                    <div class="d-flex flex-row justify-content-center mt-3 gap-3">
                        <button type="submit" class="btn btn-outline-success btn-sm ">Connect</button>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-warning btn-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}